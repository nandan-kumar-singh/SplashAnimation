<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.cambiar.ludusz.util.RoundedImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_people" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_alignTop="@+id/view76"
                android:layout_gravity="top"
                android:layout_toLeftOf="@+id/view76"
                android:layout_toStartOf="@+id/view76"
                android:padding="2dp"
                android:shadowColor="@color/white"
                android:shadowDx="3"
                android:shadowRadius="1"
                android:text="Ansuman Gaekwad"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/view76"
                android:layout_width="55dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/yellow_round_corner_box"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imageButton44"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:shadowColor="@color/colorPrimary"
                    android:src="@drawable/ic_action_thumb_up" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView153"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="11"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view734"
                android:layout_width="55dp"
                android:layout_height="28dp"
                android:background="@drawable/yellow_round_corner_box"
                android:weightSum="100"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/view76"
                android:layout_toStartOf="@+id/view76">

                <ImageView
                    android:id="@+id/imageButton455"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:shadowColor="@color/colorPrimary"
                    android:src="@drawable/ic_action_thumb_up" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView1543"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="11"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_below="@+id/view76"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_toLeftOf="@+id/view76"
                android:layout_toRightOf="@+id/imageView6"
                android:text="E-22 Sec 8 Noida, New Delhi"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView6"
                android:text="Coaching Offered:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView22"
                android:layout_alignStart="@+id/textView22"
                android:layout_below="@+id/textView22"
                android:text="Offer Coaching to:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView23"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textView23"
                android:layout_below="@+id/textView23"
                android:text="Fee:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_alignLeft="@+id/textView25"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignStart="@+id/textView25"
                android:layout_below="@+id/textView25"
                android:text="Experiance:"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView26"
                android:layout_marginBottom="3dp"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/ludusz_button_red_round"
                    android:elevation="2dp"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_action_call_red" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/ludusz_button_red_round"
                    android:elevation="2dp"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_action_mail_red" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/button_selector_red"
                    android:elevation="2dp"
                    android:text="Book"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_page_popular_student_tab_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout3"
                android:background="@drawable/button_selector_red"
                android:clickable="false"
                android:elevation="2dp"
                android:paddingLeft="@dimen/landing_page_left_margin">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/player_landing_page_imageview_width"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:alpha=".9"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_my_student" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView92"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Popular Student"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/player_landing_page_imageview_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:alpha=".6"
                    android:gravity="center"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_arrow_right"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView26"
                android:layout_alignStart="@+id/textView26"
                android:layout_below="@+id/linearLayout6"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/yellow_round_corner_box">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_review" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_action_review"
                        android:text="10"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_black" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/yellow_round_corner_box">

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/indicator_ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:isIndicator="true"
                        android:numStars="5" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/button5"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/yellow_round_corner_box">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_action_people" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_action_review"
                        android:text="+10"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_black" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/yellow_round_corner_box">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/ic_action_review"
                        android:text="Compare +"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/dark_black"
                        android:visibility="visible" />
                </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_page_popular_student_height"
                android:layout_alignLeft="@+id/linearLayout5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/linearLayout5"
                android:layout_below="@+id/linearLayout5"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_people" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_people" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_people" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/imageView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/white_shade"
                    android:src="@drawable/ic_people"
                    android:text="+12" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>