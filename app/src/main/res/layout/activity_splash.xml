<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash">

    <ImageView
        android:id="@+id/iv_splash_ludusz_logo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_gravity="center"
        android:layout_marginTop="148dp"
        android:scaleType="centerInside"
        android:src="@drawable/ludusz"
        android:transitionName="@string/blog_activity_transition" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_splash_ludusz_logo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="&quot;Let&apos;s start Enjoying life, everyday every moment&quot;"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_splash_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_gravity="center"
        android:text="Ver.1.7.1.0"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>