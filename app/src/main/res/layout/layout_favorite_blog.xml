<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.cambiar.ludusz.util.RoundedImageView
                android:id="@+id/iv_coach_profile_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tv_header"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_people" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ll_likes_count"
                android:layout_alignLeft="@+id/tv_address"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tv_address"
                android:layout_toLeftOf="@+id/ll_likes_count"
                android:padding="2dp"
                android:shadowColor="@color/white"
                android:shadowDx="3"
                android:shadowRadius="1"
                android:text="General Sports"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView19"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ll_likes_count"
                android:layout_toRightOf="@+id/iv_coach_profile_pic"
                android:text="@string/blob_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_coach_profile_pic"
                android:layout_toEndOf="@+id/iv_coach_profile_pic"
                android:layout_toRightOf="@+id/iv_coach_profile_pic"
                android:text="Posted 5 days ago"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/ll_likes_count"
                android:layout_width="55dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/yellow_round_corner_box"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:shadowColor="@color/colorPrimary"
                    android:src="@drawable/ic_action_thumb_up" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="45"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="11"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>