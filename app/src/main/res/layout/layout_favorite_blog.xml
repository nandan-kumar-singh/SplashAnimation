<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    app:cardBackgroundColor="@color/white_shade"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.cambiar.ludusz.util.RoundedImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_people" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView17"
                android:layout_toRightOf="@+id/imageView6"
                android:padding="2dp"
                android:shadowColor="@color/white"
                android:shadowDx="3"
                android:shadowRadius="1"
                android:text="General Sports"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="@dimen/player_landing_page_imageview_width"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView18"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView17"
                android:layout_toStartOf="@+id/textView17"
                android:background="@null"
                android:scaleType="fitCenter"
                android:shadowColor="@color/colorPrimary"
                android:shadowDx="12"
                android:shadowRadius="11"
                android:src="@mipmap/ic_action_like" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="10"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView19"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView16"
                android:layout_toRightOf="@+id/imageView6"
                android:text="@string/blob_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:text="Posted 5 days ago"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>